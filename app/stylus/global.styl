/*Футер к низу страницы*/
html
body
  height 100%
  color #555
  font normal 14px 'Open Sans', sans-serif
.wrapper
  min-height: 100%
  height auto !important
  height 100%
  margin 0 auto - footerHeight
.footer-push
  height footerHeight
.footer
  height footerHeight
.container
  position relative
  width containerWidth
  margin 0 auto
  padding 0 20px
.container--white
  background #ffffff
.wrapper
  min-width containerWidth
  overflow hidden
.f-left
  float left
.f-right
  float right
.t-center
  text-align center
.t-right
  text-align right
.unstyled-list
  margin 0
  padding 0
  list-style none
.clearfix
  clearfix()


.js-tabs__content
  display none
  &.active
    display block

table
 width 100%
tr
  background #f3f3f3
  &:nth-child(2n)
    background #fff
td
  padding 4px

input.error
textarea.error
  border-color red
  outline none
label.error
  color #ff0000

.fixed
  width 100%
  position fixed
  top 0
  z-index 2
  box-shadow 0 0 10px rgba(0,0,0,0.5)

.man-bg
  background url("../img/bg/man-bg.png") no-repeat right center

