@import '/mixins/mixins'
@import '/mixins/sprite'

/*Переменные настройки*/
headerHeight = auto
footerHeight = 380px
placeholderColor = #000
containerWidth = 1280px


*
  box-sizing border-box
  inline-box-align align-content

/*Стилизация placeholder*/
input
  placeholder(#888888)

/*Скрытие текста*/
.replace-text
  text-hide()
a
  color #739ac5
  &:hover
  &:visited
    text-decoration none
/*иконки*/
