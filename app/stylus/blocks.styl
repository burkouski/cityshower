  padding 0 11px
  border 1px solid #739ac5
  border-radius 5px
  color #739ac5
  font-size 12px
  line-height 24px
  text-transform uppercase
  text-decoration none
  &:hover
    background #739ac5
    color #ffffff
.addcart-btn
  position relative
  display block
  padding 0 11px 0 54px
  border 2px solid #555555
  border-radius 5px
  color #555555
  font-size 13px
  font-weight bold
  line-height 37px
  text-transform uppercase
  text-decoration none
  &:before
    position absolute
    top 50%
    left 7px
    margin -12px 0 0 0
.click-btn
  position relative
  display block
  padding 0 11px 0 54px
  border 1px solid #739ac5
  border-radius 5px
  color #739ac5
  font-size 13px
  font-weight bold
  line-height 37px
  text-transform uppercase
  text-decoration underline
  &:before
    position absolute
    top 50%
    left 7px
    margin -12px 0 0 0